{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboard": true,
  "packageRules": [
    {
      "groupName": "CI and devDependencies",
      "matchManagers": ["github-actions", "pre-commit"]
    },
    {
      "matchDepNames": ["python"],
      "enabled": false
    },
    {
      "groupName": "pyo3 ecosystem",
      "matchManagers": ["cargo"],
      "matchPackageNames": ["pyo3", "pyo3-log", "pythonize"]
    },
    {
      "groupName": "serde ecosystem",
      "matchManagers": ["cargo"],
      "matchPackageNames": ["serde", "serde_json"]
    },
    {
      "groupName": "cargo",
      "matchJsonata": ["isBreaking != true"],
      "matchManagers": ["cargo"]
    },
    {
      "groupName": "python",
      "matchManagers": ["pep621"]
    },
    {
      "groupName": "wasm",
      "matchJsonata": ["isBreaking != true"],
      "matchManagers": ["npm"]
    },
    {
      "groupName": "typst",
      "matchManagers": ["typst"]
    },
    {
      "description": "Automerge patch updates",
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "platformAutomerge": true
    }
  ],
  "pre-commit": { "enabled": true },
  "lockFileMaintenance": { "enabled": true },
  "separateMultipleMajor": true,
  "extends": [
    "config:recommended",
    "schedule:weekly",
    ":semanticCommitTypeAll(chore)",
    ":label(renovate)"
  ]
}
